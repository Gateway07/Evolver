{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/schemas/signature_report.schema.json",
  "title": "Signature Report (Wrapper-computed)",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "canonicalization_version", "signatures"],
  "properties": {
    "schema_version": { "type": "string", "pattern": "^[0-9]+\\.[0-9]+$" },
    "canonicalization_version": { "type": "string", "minLength": 1, "maxLength": 64 },
    "signatures": {
      "type": "object",
      "additionalProperties": false,
      "required": ["hypotheses", "groups", "theories"],
      "properties": {
        "hypotheses": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["hypothesis_id", "hypothesis_signature"],
            "properties": {
              "hypothesis_id": { "type": "string", "maxLength": 128 },
              "hypothesis_signature": { "type": "string", "pattern": "^[a-f0-9]{64}$" }
            }
          }
        },
        "groups": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["name", "group_signature"],
            "properties": {
              "name": { "type": "string", "maxLength": 128 },
              "group_signature": { "type": "string", "pattern": "^[a-f0-9]{64}$" }
            }
          }
        },
        "theories": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["theory_id", "theory_signature"],
            "properties": {
              "theory_id": { "type": "string", "maxLength": 128 },
              "theory_signature": { "type": "string", "pattern": "^[a-f0-9]{64}$" }
            }
          }
        }
      }
    }
  }
}
