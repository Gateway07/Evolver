{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/schemas/code_evidence.schema.json",
  "title": "Code Investigation Evidence",
  "type": "object",
  "additionalProperties": false,
  "required": ["targets", "observations"],
  "properties": {
    "targets": {
      "type": "array",
      "minItems": 1,
      "maxItems": 64,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["kind", "repo_path"],
        "properties": {
          "kind": { "type": "string", "enum": ["java", "kotlin", "gradle", "other"] },
          "repo_path": { "type": "string", "minLength": 1, "maxLength": 512 },
          "symbols": { "type": "array", "items": { "type": "string", "maxLength": 256 }, "maxItems": 128 },
          "commit": { "type": "string", "maxLength": 64 },
          "notes": { "type": "string", "maxLength": 4000 }
        }
      }
    },
    "observations": {
      "type": "array",
      "minItems": 1,
      "maxItems": 256,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "claim", "evidence"],
        "properties": {
          "id": { "type": "string", "maxLength": 64 },
          "claim": { "type": "string", "minLength": 1, "maxLength": 4000 },
          "evidence": {
            "type": "array",
            "minItems": 1,
            "maxItems": 16,
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": ["type"],
              "properties": {
                "type": { "type": "string", "enum": ["code_snippet_ref", "symbol_ref", "commit_ref", "note"] },
                "file": { "type": "string", "maxLength": 512 },
                "symbol": { "type": "string", "maxLength": 256 },
                "lines": { "type": "string", "maxLength": 64 },
                "text": { "type": "string", "maxLength": 4000 }
              }
            }
          },
          "links": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "surrogate_objects": { "type": "array", "items": { "type": "string", "maxLength": 128 } },
              "mechanism_features": { "type": "array", "items": { "type": "string", "maxLength": 128 } },
              "tracing_variables": { "type": "array", "items": { "type": "string", "maxLength": 256 } }
            }
          }
        }
      }
    }
  }
}
