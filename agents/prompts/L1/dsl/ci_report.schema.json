{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/schemas/ci_report.schema.json",
  "title": "Effect Size + CI + Reproducibility Report (Wrapper-computed)",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "entries"],
  "properties": {
    "schema_version": { "type": "string", "pattern": "^[0-9]+\\.[0-9]+$" },
    "entries": {
      "type": "array",
      "minItems": 1,
      "maxItems": 256,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["hypothesis_id", "metric", "effect_size", "ci", "reproducibility", "decision"],
        "properties": {
          "hypothesis_id": { "type": "string", "maxLength": 128 },
          "metric": { "type": "string", "maxLength": 64 },
          "effect_size": {
            "type": "object",
            "additionalProperties": false,
            "required": ["type", "value"],
            "properties": {
              "type": { "type": "string", "maxLength": 64 },
              "value": { "type": "number" },
              "definition": { "type": "string", "maxLength": 4000 }
            }
          },
          "ci": {
            "type": "object",
            "additionalProperties": false,
            "required": ["level", "low", "high", "method"],
            "properties": {
              "level": { "type": "number", "minimum": 0.5, "maximum": 0.999 },
              "low": { "type": "number" },
              "high": { "type": "number" },
              "method": { "type": "string", "maxLength": 64 },
              "params": { "type": "object", "additionalProperties": true }
            }
          },
          "reproducibility": {
            "type": "object",
            "additionalProperties": false,
            "required": ["repeat_runs", "run_ids"],
            "properties": {
              "repeat_runs": { "type": "integer", "minimum": 1, "maximum": 50 },
              "run_ids": { "type": "array", "minItems": 1, "items": { "type": ["integer", "string"] } },
              "variance_notes": { "type": "string", "maxLength": 4000 }
            }
          },
          "decision": {
            "type": "object",
            "additionalProperties": false,
            "required": ["accepted", "reason"],
            "properties": {
              "accepted": { "type": "boolean" },
              "reason": { "type": "string", "maxLength": 4000 }
            }
          }
        }
      }
    }
  }
}
